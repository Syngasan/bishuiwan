<script>
import {getCurrentTaskList} from '@/utils/axios/axios'
export default {
  data () {
    return {
      currentList:[],
      pageNumber:1,
      pageSize:10,
      length:0
    }
  },
  methods: {
    commit (event) {
      console.log(event)

      event.stopPropagation()

      this.$confirm('确认提交任务?, 是否继续?', '提示', {
        confirmButtonText: '确定',
        cancelButtonText: '取消',
        type: 'warning',
        center: true
      }).then(() => {

        
        this.$message({
          type: 'success',
          message: '提交成功!'
        })
      }).catch(() => {
        this.$message({
          type: 'info',
          message: '已取消提交'
        })
      })
    },
    handleSizeChange (val) {
      console.log(`每页 ${val} 条`)
      this.pageSize = val
      this.init()                        
    },
    handleCurrentChange (val) {
      console.log(`当前页: ${val}`)
      this.pageNumber = val
      this.init()      
    },
    toDetail () {
      this.$router.push('/allTaskDetail')
    },
    totitleDetail () {
      this.$router.push('/titleTaskDetail')
    },
    init () {
      let params = {
        sessionId:localStorage.getItem('sessionId'),
        taskState:0
      }
      getCurrentTaskList( this.$qs.stringify(params)) .then(res=>{
        console.log(res);
        if (res.code === 1) {
          this.currentList = res.data.list
          this.length = res.data.totalRow          
        }
      })
    }
  },
  mounted () {
    this.init()
  }
}
</script>
